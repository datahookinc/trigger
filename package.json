{
  "name": "@datahook/trigger",
  "version": "0.3.0",
  "description": "React state management library following data-oriented design principles",
  "keywords": [
    "react",
    "state",
    "state management",
    "trigger",
    "data oriented",
    "typescript"
  ],
  "private": false,
  "author": "Josh Weston",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --rootDir=./tests --watch index.test.ts",
    "test-build": "jest --silent --rootDir=./tests",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test-build && npm run lint",
    "preversion": "npm run test-build && npm run lint && npm run format",
    "version": "npm run build && git add --force -A lib",
    "postversion": "git push && git push --tags",
    "format": "prettier --config .prettierrc --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/datahookinc/trigger.git"
  },
  "bugs": {
    "url": "https://github.com/datahookinc/trigger/issues"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "files": [
    "lib/**/*"
  ]
}
